<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_device_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text=""
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_get_device_id_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usage 1: Get device identifier in real time"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_get_device_id_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usage 2: Get device identifier in advance"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_device_id_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
